---
export interface Props {
  title: string;
  slug: string;
  description: string;
  publishDate: Date;
  readingTime?: string;
}

const { title, slug, description, publishDate, readingTime } = Astro.props;

const formatDate = (date: Date) => {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
};
---

<article class="post-card">
  <div class="post-meta">
    {formatDate(publishDate)}{readingTime && ` Â· ${readingTime}`}
  </div>
  <h3 class="post-title">
    <a href={`/blog/${slug}`}>{title}</a>
  </h3>
  <p class="post-excerpt">{description}</p>
  <a href={`/blog/${slug}`} class="read-more">Read full article</a>
</article>